<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radial_background"
    android:orientation="vertical"
    tools:context="com.example.bins.rookieagent.MainActivity">

    <ImageView
        android:id="@+id/homeLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="50"
        android:contentDescription="@string/logo_desc"
        android:src="@drawable/home_screen" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="50">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnStart"
            style="@style/Button_home"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="33"
            android:text="@string/start"
            android:textColor="@color/black"
            app:backgroundTint="@color/yellow"
            android:onClick="Commencer"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnOption"
            style="@style/Button_home"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="33"
            android:text="@string/option"
            android:textColor="@color/black"
            app:backgroundTint="@color/yellow"
            android:onClick="Option"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnQuit"
            style="@style/Button_home"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="33"
            android:text="@string/exit"
            android:textColor="@color/black"
            app:backgroundTint="@color/yellow"
            android:onClick="Quitte"/>
    </TableLayout>
</LinearLayout>